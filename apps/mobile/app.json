{
  "expo": {
    "name": "NiVoca",
    "slug": "nivoca",
    "version": "1.0.0",
    "sdkVersion": "55.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3eb8d4"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "win.jun-devlog.nivoca",
      "infoPlist": {
        "NSCameraUsageDescription": "Used to scan Japanese text from images",
        "NSPhotoLibraryUsageDescription": "Used to select images with Japanese text",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3eb8d4"
      },
      "package": "win.jundevlog.nivoca",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#3eb8d4"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow NiVoca to access your camera to scan Japanese text."
        }
      ],
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow NiVoca to select images with Japanese text.",
          "cameraPermission": "Allow NiVoca to take photos of Japanese text."
        }
      ]
    ],
    "scheme": "nivoca",
    "extra": {
      "eas": {
        "projectId": "28699ba2-ed17-467c-beab-35a465c48813"
      },
      "router": {}
    },
    "owner": "junjakk"
  }
}
